{% extends 'base.html.twig' %}

{% block title %}Agregar Autor {{parent()}} {% endblock %}
{% block stylesheets %}{{ parent() }}{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Inicio</a></li>
                <li class="breadcrumb-item"><a href="{{ path('editorial') }}">Autor</a></li>
                <li class="breadcrumb-item active" aria-current="page">Agregar</li>
            </ol>
        </nav>
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {{ form_start(formulario, {'method': 'POST'}) }}

            <div class="form-group">
                {{ form_row(formulario.autNombre, { 'label': 'Nombre:' }) }}
            </div>
            <div class="form-group">
                {{ form_row(formulario.autApellido, { 'label': 'Apellido:'}) }}
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        {{ form_row(formulario.autFechaNac, { 'label': 'Fecha nacimiento:'}) }}
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        {{ form_row(formulario.paiId, { 'label': 'Pais:'}) }}
                    </div>
                </div>
            </div>
            
           <div>
                {{ form_widget(formulario.submit, { 'label': 'Agregar'}) }}
                
                <!-- Button cancelar modal -->
                <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#cancelModal">Cancelar</button>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Cancelar operación</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ¿Desa cancelar la operación?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                        <a href="{{ path('autor_index') }}" type="button" class="btn btn-primary">Si</a>
                    </div>
                    </div>
                </div>
            </div>


        {{ form_end(formulario) }}
    </div>
{% endblock %}
